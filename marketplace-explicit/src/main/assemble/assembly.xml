<project name="nuxeo-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />

  <property name="outdir" value="${maven.project.build.directory}" />

  <target name="build" description="Build Nuxeo sample Marketplace package">
    <tstamp />
    <delete failonerror="false" dir="${outdir}/marketplace" />
    <mkdir dir="${outdir}/marketplace" />
    <copy todir="${outdir}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${marketplace.sample.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
      </filterset>
    </copy>

    <copy todir="${outdir}/marketplace/install/bundles">
      <!-- Your bundles -->
      <artifact:resolveFile key="org.nuxeo.sample:nuxeo-sample-project::jar" />
    </copy>
    <!-- Whereas the marketplace build using an NXR is automatically downloading the
    required libraries, that simpler solution requires you explicitly list them -->
    <copy todir="${outdir}/marketplace/install/lib">
      <!-- Some needed third-party libraries -->
      <artifact:resolveFile key="javax.faces:jsf-api::jar" />
      <artifact:resolveFile key="org.jboss.seam:jboss-seam::jar" />
      <artifact:resolveFile key="org.jboss.seam:jboss-seam-remoting::jar" />
      <artifact:resolveFile key="org.hibernate:hibernate-validator::jar" />
    </copy>

    <zip destfile="${outdir}/${maven.project.artifactId}-${marketplace.sample.version}.zip"
         basedir="${outdir}/marketplace" />
    <artifact:attach file="${outdir}/${maven.project.artifactId}-${marketplace.sample.version}.zip"
                     target="${maven.project.groupId}:${maven.project.artifactId}"
                     type="zip" />
  </target>

</project>
